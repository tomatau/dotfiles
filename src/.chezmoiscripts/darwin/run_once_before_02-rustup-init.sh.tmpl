#!/usr/bin/env bash

source "{{ .chezmoi.sourceDir }}/.scripts/utils.sh"

set_strict_mode

p_header white "Rust initialisation..."

# install rustc if not installed
if ! command -v rustc &> /dev/null; then
  p_header purple "Initialising Rust..."
  brew install rustup
  rustup-init -y
else
  p_header green "Rust already initialised..."
fi

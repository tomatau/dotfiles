[core]
    editor = subl -n -w
    excludesfile = ~/.gitignore
    attributesfile = ~/.gitattributes
	pager = delta

    # Make `git rebase` safer on OS X
    # More info: <http://www.git-tower.com/blog/make-git-rebase-safe-on-osx/>
    # trustctime = false

[init]
	defaultBranch = main

[push]
    default = simple

[pull]
    rebase = true

[rebase]
    autosquash = true

[help]
    autocorrect = 3

[alias]
    a = add
    aa = add -A
    b = branch
    s = status -s
    st = status
    c = commit
	cn = commit --no-verify
    cm = commit -m
    cmn = commit -m --no-verify
    ca = commit -a
    can = commit -a --no-verify
    cam = commit -am
    camn = commit -am --no-verify
    cia = commit --amend -C HEAD
    cian = commit --amend -C HEAD --no-verify
    mend = commit --amend
    co = checkout
    conew = checkout origin/main -b
    d = diff -- ':!package-lock.json'
    dsd = diff --staged -- ':!package-lock.json'
    dst = diff --stat -- ':!package-lock.json'
    new = log master.. --reverse
    unstage = reset HEAD
    uncommit = reset HEAD~
    unpush = push -f origin HEAD^:main
    ignore = update-index --assume-unchanged
    unignore = update-index --no-assume-unchanged
    ignored = !git ls-files -v | grep "^[[:lower:]]"
    last = log -1 -p HEAD
    m = merge
    ps = push
    psn = push --no-verify
    pf = push --force-with-lease
    pfn = push --force-with-lease --no-verify
    pl = pull
    rmc = rm --cached
	rb = rebase
	rbc = rebase --continue
	rbs = rebase --skip
	rba = rebase --abort
    wdiff = diff --color-words
    # View abbreviated SHA, description, and history graph of the latest 20 commits
    l = log --pretty=oneline -n 20 --graph --abbrev-commit
    # show custom graph
    g = log --graph --pretty=custom
    delbr = push origin --delete

[delta]
    syntax-theme = Monokai Extended
    navigate = true    # use n and N to move between diff sections
    # light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
    side-by-side = true
    line-numbers = true


[interactive]
    diffFilter = delta --color-only

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
	# renames = copies # detect renames

